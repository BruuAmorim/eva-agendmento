# Configurações do EvAgendamento

# Modo de armazenamento (desenvolvimento)
# true = usa memória (não precisa de PostgreSQL)
# false = usa PostgreSQL
USE_MEMORY_STORAGE=true

# Configurações do Banco de Dados PostgreSQL (apenas se USE_MEMORY_STORAGE=false)
# Opção 1: Usar DATABASE_URL (recomendado para produção)
DATABASE_URL=postgresql://username:password@localhost:5432/evagendamento

# Opção 2: Configurações individuais (fallback para desenvolvimento)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=evagendamento
DB_USER=postgres
DB_PASSWORD=

# Configurações da API
PORT=3000
NODE_ENV=development
# API_BASE_URL=http://localhost:3000/api  # Opcional - será detectado automaticamente se não definido
API_HOST=localhost  # Host da API (para produção)
API_PROTOCOL=http   # Protocolo (http/https)

# Configurações de Segurança
JWT_SECRET=sua_chave_jwt_super_segura_aqui
API_RATE_LIMIT=100

# Configurações do Frontend
FRONTEND_URL=https://eva-agendamento.vercel.app




